<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/inscrits_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:background="@color/transparent"
            android:padding="1dp"
            app:backgroundTint="@null"
            android:layout_gravity="left"
            android:textAllCaps="false"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recevoir des notifications d'offres"
            android:textSize="19sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Metier"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zone de texte"
            android:background="@drawable/rounded_rect"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lieu"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end"/>

        <EditText
            android:id="@+id/edit_text_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zone de texte"
            android:background="@drawable/rounded_rect"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Periode"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end"/>

        <EditText
            android:id="@+id/edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zone de texte"
            android:background="@drawable/rounded_rect"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employeur"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end"/>

        <EditText
            android:id="@+id/edit_text_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zone de texte"
            android:background="@drawable/rounded_rect"
            android:padding="16dp"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="185dp" />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appliquer"
            android:textSize="14sp"
            android:background="@drawable/round_button_2"
            android:textColor="@color/white"
            android:padding="2dp"
            app:backgroundTint="@null"
            android:layout_gravity="end"
            android:textAllCaps="false"/>


    </LinearLayout>
</ScrollView>

